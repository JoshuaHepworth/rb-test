<table class="item">
  <thead>
    <tr>
      <br>
      <th>Item number</th>
     
      <th>Sap #</th>
      <th>Tr card #</th>
      <th>Rb #</th>
      <div class="border">
      <table class="list">
      <table class="name"><th>Name:</th></table>
      <table class="machine"><th>Machine:</th></table>
      <table class="material"><th>Material:</th></table>
      <table class="finish"><th>Finish:</th></table>
      <table class="lead"><th>Lead time:</th></table>
      <table class="additional"><th>Additional:</th></table>    
      </div>    
    </table>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td>
          <%= item.item_number %>
          <%= image_tag item.avatar.url(:thumb) %>
        </td>
        
        <table class="sap"><td><%= item.sap_number %></td></table>
        <table class="num"><td><%= item.tr_number %></td></table>
        <table class="rb"><td><%= item.rb_number %></td></table>
        <table class="namefirst"><td><%= item.name %></td></table>
        <table class="machinefirst"><td><%= item.machine %></td></table>
        <table class="materialfirst"><td><%= item.material %></td></table>
        <table class="finishfirst"><td><%= item.finish %></td></table>
        <table class="leadfirst"><td><%= item.lead_time %></td></table>
        <table class="additionalfirst"><td><%= item.additional %></td></table>
      </tr>
      <tr>
        <td><%= link_to 'Show', item, class: "show" %></td>
        <td><%= link_to 'Edit', edit_item_path(item), class: "show"%></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "show"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
 
